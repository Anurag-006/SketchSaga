datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  name      String?
  password  String? // null for OAuth or guest flows
  createdAt DateTime @default(now())
  rooms     Room[]   @relation("UserRooms")
  chats     Chat[]
}

model Room {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isEphemeral Boolean  @default(false)
  // Owner if persistent (null for guest ephemeral rooms)
  ownerId     String?
  owner       User?    @relation("UserRooms", fields: [ownerId], references: [id])
  chats       Chat[]
  shapes      Shape[]
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}

model Shape {
  id        Int      @id @default(autoincrement())
  shapeId   String
  type      String
  data      Json
  createdAt DateTime @default(now())
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  // 2. Unique Constraint: A shapeId must be unique WITHIN a specific room.
  // This prevents duplicates and allows fast upserts.
  @@unique([roomId, shapeId])
  @@index([roomId])
}
